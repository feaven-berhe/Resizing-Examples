<html>
	<head>
		<title>Simple Line Graph using SVG and d3.js</title>
		<script src="http://mbostock.github.com/d3/d3.v2.js"></script>
		<script src="http://d3js.org/d3.v3.min.js" charset="utf-8"></script>
		<style>
		path {
			stroke: steelblue;
			stroke-width: 1;
			fill: none;
			}
		svg{
			height:60%
			width:80%;
			}
			
		.axis {
		        shape-rendering: crispEdges;
			}
		.x.axis line {
		        stroke: lightgrey;
			}
		.x.axis .minor {
			stroke-opacity: .5;
			}
		.x.axis path {
			display: none;
			}
		.y.axis line,
		.y.axis path {
			fill: none;
			stroke: #000;
			}
<!--		.svg-graph{
		        display: inline-block;
		        position: relative;
		        width: 100%;
		        padding-bottom: 100%;
		        vertical-align: top;
		        overflow: hidden;
		}
		 .svg-aGraph{
		          display: inline-block;
		         position: absolute;
		         top: 0;
		         left: 0; //-->

		</style>
	</head>
	<body>

	<script>


	var data = [3, 6, 2, 7, 5, 2, 0, 3, 8, 9, 2, 5, 9, 3, 6, 3, 6, 2, 7, 5, 2, 1, 3, 8, 9, 2, 5, 9, 2, 7];
		
	var chartHeight = 200,
	    chartWidth = 500,
	    chartXOffset = 50
            chartYOffset = 50
	    chartGapRatio = 0.3
	    maxValue=d3.max(data);
		


	var yScale = d3.scale.linear()
		       .domain([0, maxValue])
		       .range([chartHeight, 0]);
		
	var xScale = d3.scale.linear()
		       .domain([0, data.length])
		       .range([0, chartWidth]);
		
		
	var yAxisLeft = d3.svg.axis()
		          .scale(yScale)
		          .ticks(4)
		          .orient("left");
		
	var xAxis = d3.svg.axis()
		      .scale(xScale)
	              .tickSize(-chartHeight);		

	
	var graph = d3.select("body").append("svg")
	.attr("id", "svgGraph").append("g"
			      .attr("width", 1000)
			      .attr("height", 400)
			      .append("svg:g")
		              .attr("transform", "translate(" +80 + "," + 80 + ")");

		
		var line = d3.svg.line()
		 	     .x(function(d,i) { 
				return xScale(i); 
			})
			.y(function(d) { 
				return yScale(d); 
		})
		
	

		graph.append("svg:g")
			      .attr("class", "x axis")
			      .attr("transform", "translate(0," + chartHeight + ")")
			      .call(xAxis);

		graph.append("svg:g")
			      .attr("class", "y axis")
			      .attr("transform", "translate(-25,0)")
			      .call(yAxisLeft);
			
  	
  		graph.append("svg:path").attr("d", line(data));
			
	</script>



	</body>
</html>
